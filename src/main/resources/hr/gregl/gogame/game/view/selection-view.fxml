        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <GridPane alignment="CENTER" prefHeight="177.0" prefWidth="654.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
