            <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="Infinity" onAction="#startServer" prefHeight="94.0" prefWidth="100.0" text="Start SERVER" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1">
